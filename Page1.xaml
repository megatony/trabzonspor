            <TextBlock Text="Trabzonspor" Style="{StaticResource PhoneTextNormalStyle}"/>
            <TextBlock Text="Kadromuz" Margin="9,-7,0,0" Style="{StaticResource PhoneTextTitle1Style}"/>
        </StackPanel>

